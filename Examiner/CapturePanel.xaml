<UserControl x:Class="Examiner.CapturePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Examiner"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1700">
    <Grid>
        <Image Stretch="Fill" Source="{Binding Preview}"/>
        <Grid Margin="0,30,0,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Row="0" Width="Auto"  Source="/assets/images landscape/capture/button_burst.png" Margin="0,30,0,30" />
            <Image Grid.Row="1" Source="/assets/images landscape/capture/button_photo.png" Margin="0,30,0,30" MouseLeftButtonDown="Image_MouseLeftButtonDown" />
            <Image Grid.Row="2" Source="/assets/images landscape/capture/button_video1.png" Margin="0,30,0,31" />
        </Grid>
    </Grid>
</UserControl>
